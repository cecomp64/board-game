
<div class="helper_wrapper">
<div class="helper_card">
  <div class="helper_header"> 
    <div class="title"><%=helper.title%></div>
    <span class="points"><%=helper.points%></span>
  </div>
  <!--<div class="helper_picture">...</div>-->
  <div class="helper_text"><%=helper.text%></div>
  <div class="helper_modifiers">
    <% helper.modifier_instances.each do |mi| %>
      <%= mi.to_words %>
    <% end %>
  </div>
  <div class="helper_bottom" <%= helper.geography ? "style=background-color:#{helper.geography.color};color:white;" : ""%>>
    <%= helper.geography ? helper.geography.name : "Any Geography" %>
  </div>
</div>
<div class="web-only">
  <% if game.nil? %>
    <%= link_to "Edit", edit_helper_path(helper) %> | 
    <%= link_to "Delete", helper, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% else %>
    <%= link_to "Discard", discard_helper_path(game, helper, player) %>
  <% end %>
</div>
</div>
