<h1>Game <%= @game.name %></h1>
<p id="notice"><%= notice %></p>
<% if @game.turn == 0 %>
  <p><%= link_to "Start Game", start_game_path(@game) %></p>
<% else %>
  <p>
  Turn: <%= @game.turn %> - <%= @game.current_player.name %>
  <%= link_to "Next Player", next_turn_path(@game) %>
  </p>
  <% @game.players.each do |player| %>
    <%= render partial: "players/player", locals: {player:player} %>
  <% end %>
<% end %>

